  <image filename="maximize-unfocused-normal.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="button-maximize-pressed">
  <image filename="maximize-focused-pressed.png" x="0"  y="0" width="width" height="height"/>
